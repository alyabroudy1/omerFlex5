<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sniffer_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF141414"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">

    <!-- WebView Container -->
    <FrameLayout
        android:id="@+id/sniffer_webview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Loading Overlay -->
    <LinearLayout
        android:id="@+id/sniffer_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6141414"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminateTint="#E50914" />

        <TextView
            android:id="@+id/sniffer_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Looking for video..."
            android:textColor="#888888"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/btn_close_sniffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:backgroundTint="#E50914"
        android:text="âœ• CLOSE"
        android:textColor="#FFFFFF" />

</FrameLayout>
