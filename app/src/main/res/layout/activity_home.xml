<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_background"
    android:orientation="vertical"
    android:weightSum="10">

    <!-- LAYER 1: Hero View (Weight 6 = 60%) - Can only go DOWN -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hero_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:descendantFocusability="afterDescendants">

        <ImageView
            android:id="@+id/image_hero_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@color/netflix_card_background" />

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false"
            app:resize_mode="zoom"
            app:shutter_background_color="@android:color/transparent"
            app:surface_type="texture_view" />

        <!-- WebView for YouTube embed playback -->
        <WebView
            android:id="@+id/youtube_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- YouTube Controls Overlay (hidden by default) -->
        <include
            layout="@layout/youtube_controls_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Gradient Overlay -->
        <View
            android:id="@+id/gradient_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_hero_overlay" />

        <!-- Title - Left aligned, 40% width -->
        <TextView
            android:id="@+id/text_hero_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/text_hero_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.4"
            tools:text="Stranger Things" />

        <!-- Description - Left aligned, 40% width -->
        <TextView
            android:id="@+id/text_hero_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="@color/netflix_text_secondary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.4"
            tools:text="When a young boy vanishes, a small town uncovers a mystery..." />

        <!-- Mute Button - Can only go RIGHT and DOWN (not UP) -->
        <ImageButton
            android:id="@+id/btn_mute"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Toggle mute"
            android:src="@drawable/ic_volume_on"
            android:focusable="true"
            android:nextFocusUp="@id/btn_mute"
            android:nextFocusLeft="@id/btn_mute"
            android:nextFocusRight="@id/btn_fullscreen"
            android:nextFocusDown="@id/recycler_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_fullscreen" />

        <!-- Fullscreen Button - Can only go LEFT and DOWN (not UP) -->
        <ImageButton
            android:id="@+id/btn_fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Toggle fullscreen"
            android:src="@drawable/ic_fullscreen"
            android:focusable="true"
            android:nextFocusUp="@id/btn_fullscreen"
            android:nextFocusLeft="@id/btn_mute"
            android:nextFocusRight="@id/btn_fullscreen"
            android:nextFocusDown="@id/recycler_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LAYER 2: Categories Row (Weight 1 = 10%) - Can go UP, DOWN, LEFT, RIGHT -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:nextFocusUp="@id/btn_mute"
        android:nextFocusDown="@id/recycler_movies"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_category" />

    <!-- LAYER 3: Movies Row (Weight 3 = 30%) - Can only go UP, LEFT, RIGHT (not DOWN) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_movies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants"
        android:focusable="true"
        android:nextFocusUp="@id/recycler_categories"
        android:nextFocusDown="@id/recycler_movies"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_movie_card" />

</LinearLayout>
