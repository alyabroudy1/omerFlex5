<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="true"
        app:show_buffering="when_playing"
        app:resize_mode="fill"
        app:controller_layout_id="@layout/exo_styled_player_control_view"
        app:hide_on_touch="true"
        app:auto_show="true"
        app:show_timeout="5000" />

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Cast Device Indicator -->
    <TextView
        android:id="@+id/cast_device_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:background="#CC000000"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_cast_connected"
        android:visibility="gone"
        android:text="Casting to Device" />

    <!-- Seek Overlay Text (e.g. +30s) -->
    <TextView
        android:id="@+id/seek_overlay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#99000000"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone" />

</FrameLayout>
