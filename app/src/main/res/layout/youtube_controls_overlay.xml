<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/youtube_controls_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="gone">

    <!-- Top Bar: Settings buttons -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="24dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_quality"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Quality"
            android:src="@drawable/ic_settings"
            android:focusable="true"
            android:nextFocusDown="@id/btn_play_pause"
            android:nextFocusLeft="@id/btn_quality"
            android:nextFocusRight="@id/btn_speed" />

        <ImageButton
            android:id="@+id/btn_speed"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Speed"
            android:src="@drawable/ic_speed"
            android:focusable="true"
            android:nextFocusDown="@id/btn_play_pause"
            android:nextFocusLeft="@id/btn_quality"
            android:nextFocusRight="@id/btn_captions" />

        <ImageButton
            android:id="@+id/btn_captions"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Captions"
            android:src="@drawable/ic_closed_caption"
            android:focusable="true"
            android:nextFocusDown="@id/btn_play_pause"
            android:nextFocusLeft="@id/btn_speed"
            android:nextFocusRight="@id/btn_exit_fullscreen" />

        <ImageButton
            android:id="@+id/btn_exit_fullscreen"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Exit Fullscreen"
            android:src="@drawable/ic_fullscreen_exit"
            android:focusable="true"
            android:nextFocusDown="@id/btn_play_pause"
            android:nextFocusLeft="@id/btn_captions"
            android:nextFocusRight="@id/btn_exit_fullscreen" />

    </LinearLayout>

    <!-- Center: Playback controls -->
    <LinearLayout
        android:id="@+id/center_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_rewind"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Rewind 10 seconds"
            android:src="@drawable/ic_replay_10"
            android:scaleType="centerInside"
            android:focusable="true"
            android:nextFocusUp="@id/btn_quality"
            android:nextFocusDown="@id/seek_bar"
            android:nextFocusLeft="@id/btn_rewind"
            android:nextFocusRight="@id/btn_play_pause" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Play/Pause"
            android:src="@drawable/ic_pause"
            android:scaleType="centerInside"
            android:focusable="true"
            android:nextFocusUp="@id/btn_speed"
            android:nextFocusDown="@id/seek_bar"
            android:nextFocusLeft="@id/btn_rewind"
            android:nextFocusRight="@id/btn_forward" />

        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/selector_button_focus"
            android:contentDescription="Forward 10 seconds"
            android:src="@drawable/ic_forward_10"
            android:scaleType="centerInside"
            android:focusable="true"
            android:nextFocusUp="@id/btn_exit_fullscreen"
            android:nextFocusDown="@id/seek_bar"
            android:nextFocusLeft="@id/btn_play_pause"
            android:nextFocusRight="@id/btn_forward" />

    </LinearLayout>

    <!-- Bottom Bar: Progress/Seek bar and time -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="0:00" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:max="100"
            android:progress="0"
            android:focusable="true"
            android:nextFocusUp="@id/btn_play_pause"
            android:nextFocusDown="@id/seek_bar"
            android:nextFocusLeft="@id/seek_bar"
            android:nextFocusRight="@id/seek_bar"
            android:progressTint="@color/netflix_red"
            android:thumbTint="@color/netflix_red" />

        <TextView
            android:id="@+id/text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="0:00" />

    </LinearLayout>

</FrameLayout>
