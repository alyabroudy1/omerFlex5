<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Test Console"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/input_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tron"
            android:hint="Enter search query"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:background="#333333"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_servers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUN TEST"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logs:"
            android:textColor="#AAAAAA"
            android:layout_marginTop="8dp"/>

        <!-- Log area reduced to 80dp to save space -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#000000"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00FF00"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:textSize="12sp"
                android:text="Ready..."/>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results:"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:padding="4dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
