<?xml version="1.0" encoding="utf-8"?>
<!-- Focus selector for ExoPlayer buttons - tight red border on focus -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state - clean tight red border -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#33E50914" />
            <stroke android:width="2dp" android:color="#E50914" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#55E50914" />
            <stroke android:width="2dp" android:color="#E50914" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Default state - fully transparent -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
