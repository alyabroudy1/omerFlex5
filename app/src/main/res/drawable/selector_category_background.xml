<?xml version="1.0" encoding="utf-8"?>
<!-- Category background with distinct focus (border only) and selected (red fill) states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused + Selected state - combine both visuals -->
    <item android:state_focused="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/netflix_red" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="#FFFFFF" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Focused state only - just border, NO red fill -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#33FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="#FFFFFF" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Selected state only - red fill -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/netflix_red" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
